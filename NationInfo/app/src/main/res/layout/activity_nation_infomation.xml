<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NationInfomation">
    <TextView
        android:fontFamily="sans-serif-condensed-medium"
        android:id="@+id/textProgress"
        app:layout_constraintBottom_toTopOf="@id/imageViewNationInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Loading image..."
        ></TextView>
    <ImageView
        android:id="@+id/imageViewNationInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        ></ImageView>
    <TextView
        android:id="@+id/nationNameInfo"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="#111"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nation name"
        app:layout_constraintLeft_toLeftOf="@id/imageViewNationInfo"
        app:layout_constraintRight_toRightOf="@id/imageViewNationInfo"
        app:layout_constraintTop_toBottomOf="@id/imageViewNationInfo"></TextView>
    <TextView
        android:textSize="17sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Populations: 20 milions"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/nationNameInfo"
        android:id="@+id/populations"></TextView>
    <TextView
        android:id="@+id/area"
        android:textSize="17sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/populations"
        android:text="Area: 50 km"
        ></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>